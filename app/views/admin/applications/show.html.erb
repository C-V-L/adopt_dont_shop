<h2> Pets Applied For </h2>
<% @pets.each do |pet|%>
  <div id=<%=pet.id%>>
  <%= pet.name %> <%= "Application Status: #{@application.status}"%> 
  <% if pet.approved?(params[:id]) %>
  <%= "#{pet.name} has been approved!" %>
  <% else %>
    <%= button_to "Approve Application", "/admin/application_pets/#{@application.id}", method: :patch, params: {status: "Accepted", pet_id: pet.id}%>
    <%= button_to "Reject Application", "/admin/application_pets/#{@application.id}", method: :patch, params: {status: "Rejected"}%>
  <% end %>
  </div>  
<% end %>